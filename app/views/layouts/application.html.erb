<!DOCTYPE html>
<html>
  <head>
    <title>TheHatZone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>
  <body>

    <!-- Start navbar --->

    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #6F212F;">
      <%= link_to '~the hat zone~', home_path, class: 'navbar-brand' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to hats_path, class: 'nav-link' do %>
              View Hats
            <% end %>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                Log out
              <% end %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link' do %>
                Log In
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link' do %>
                <i class="fa fa-user"></i>
                Create an Account
              <% end %>
            </li>
          <% end %>
          <li class="nav-item">
            <%= link_to about_path, class: 'nav-link' do %>
              About
            <% end %>
          </li>
        </ul>
      </div>
    </nav>

    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>

  <!-- end navbar --->
    <%= yield %>
  </body>
</html>
